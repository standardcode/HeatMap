<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/heatmap</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="eu/standardcode/heatmap/model/Mousemove.hbm.xml"/>
    <mapping resource="eu/standardcode/heatmap/model/Mouseup.hbm.xml"/>
    <mapping resource="eu/standardcode/heatmap/model/Mousedown.hbm.xml"/>
    <mapping resource="eu/standardcode/heatmap/model/Url.hbm.xml"/>
    <mapping resource="eu/standardcode/heatmap/model/Domain.hbm.xml"/>
    <mapping resource="eu/standardcode/heatmap/model/User.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
